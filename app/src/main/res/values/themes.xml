<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FazTrexCustomer" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorAppBackGround</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="actionMenuTextColor">@color/colorBlack</item>

    </style>

    <style name="Theme.FazTrexCustomer.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorPrimaryDark
        </item>
        <item name="windowNoTitle">true</item>

    </style>

    <!-- text style light -->
    <style name="TextStyleLight">
        <item name="android:fontFamily">@font/quicksand_light</item>
    </style>

    <!-- text style normal -->
    <style name="TextStyleNormal">
        <item name="android:fontFamily">@font/quicksand</item>
    </style>

    <!-- text style semi bold -->
    <style name="TextStyleSemiBold">
        <item name="android:fontFamily">@font/quicksand_medium</item>
    </style>

    <!-- text style bold -->
    <style name="TextStyleBold">
        <item name="android:fontFamily">@font/quicksand_bold</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_bg</item>
        <item name="colorPrimaryDark">@color/colorAppBackGround</item>
    </style>

    <style name="WindowAnimationTransition">

        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>

    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">

        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>

    </style>

    <!-- Pop Menu Style-->
    <style name="PopUpMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:itemBackground">@color/colorWhite</item>
        <item name="android:fontFamily">@font/quicksand</item>
        <item name="android:textSize">@dimen/text_12sp</item>
    </style>

    <style name="TextInputEditLayoutAppearance" parent="Base.Widget.MaterialComponents.TextInputEditText">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textColorHint">@color/colorBlack</item>
        <item name="colorControlNormal">@color/colorBlack</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorWhite</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/text_14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="errorTextAppearance">@style/CustomTextInputLayoutStyle.ErrorTextStyle</item>
    </style>

    <style name="CustomTextInputLayoutStyle.ErrorTextStyle" parent="TextAppearance.Design.Error">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="CustomTabLayoutAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/text_14sp</item>
        <item name="android:fontFamily">@font/catamaran_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">@dimen/size_10dp</item>
        <item name="tabPaddingEnd">@dimen/size_10dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/TextAppearance.Design.Tab</item>
        <item name="tabSelectedTextColor">?android:textColorPrimary</item>
    </style>

    <style name="CustomEditextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="backgroundTint">@color/colorDivider</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:maxLength">40</item>
        <item name="fontFamily">@font/quicksand</item>
        <item name="android:singleLine">true</item>
        <item name="colorControlNormal">@color/colorBlack</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorWhite</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
        <item name="android:textSize">@dimen/text_14sp</item>

    </style>

    <style name="CustomEditextStyleForFilter" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:maxLength">40</item>
        <item name="fontFamily">@font/quicksand</item>
        <item name="android:singleLine">true</item>
        <item name="colorControlNormal">@color/colorBlack</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorWhite</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
        <item name="android:textSize">@dimen/text_14sp</item>

    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottomsheet_shape</item>
    </style>

    <!--Customized Progress Dialog-->
    <style name="ThemeCustomProgressDialog" parent="@android:Theme.Dialog">

        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>

    </style>

    <!--Custom Calendar Style-->
    <style name="CustomCalendar" parent="Theme.MaterialComponents.Light.Dialog">

        <item name="colorPrimary">@color/colorfzBlueLight</item>
        <item name="colorPrimaryDark">@color/colorfzBlueDark</item>
        <item name="colorAccent">@color/colorfzBlue</item>
        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button.TextButton</item>

    </style>

    <style name="paymentMode" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:paddingLeft">@dimen/size_10dp</item>
        <item name="android:paddingRight">@dimen/size_10dp</item>
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="strokeColor">@drawable/date_range_toggle</item>
        <item name="strokeWidth">@dimen/mtrl_btn_stroke_size</item>
        <item name="textAllCaps">false</item>
    </style>

    <!--region By Jigar-->
    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/colorTextSecondary</item>
        <item name="colorControlHighlight">@color/colorWhite</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/text_14sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextEditSpinnerLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/colorTextSecondary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:focusable">true</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_down</item>
        <item name="android:drawableTint" tools:targetApi="m">@color/colorBlack</item>
        <item name="android:textSize">@dimen/text_14sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>
    <!--endregion-->

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorItemCardTextItem</item>
        <item name="colorControlActivated">@color/colorGreenShade3</item>
    </style>

    <!--region By Jyoti -->
    <style name="textviewPrimary" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="maxLines">1</item>

    </style>

    <style name="customEditTextPassword">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/colorDivider</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:maxLength">30</item>
        <item name="android:textAppearance">@style/TextStyleNormal</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
        <item name="android:textSize">@dimen/text_14sp</item>
        <item name="android:drawablePadding">@dimen/size_10dp</item>
    </style>

    <style name="customEditTexthyperlocal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="android:textSize">@dimen/text_14sp</item>
    </style>


    <!--endregion-->

</resources>